generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  password      String?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Email alert preferences
  alertsEnabled   Boolean   @default(false)
  alertFrequency  String    @default("daily") // daily, weekly, instant
  alertCategories String?   // JSON array: ["AI", "healthcare", "climate", etc]
  lastAlertSent   DateTime?

  accounts      Account[]
  sessions      Session[]
  organization  Organization?
  grants        Grant[]
  applications  Application[]
  documents     Document[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Organization {
  id              String   @id @default(cuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  name            String
  type            String?  // startup, nonprofit, small_business, research
  legalStructure  String?  // LLC, Corp, 501c3, etc
  ein             String?
  website         String?
  city            String?
  state           String?

  mission         String?
  vision          String?
  problemStatement String?
  solution        String?
  targetMarket    String?

  teamSize        String?  // "1", "2-5", "6-10", etc
  founderBackground String? // Leadership team background
  annualRevenue   String?
  fundingSeeking  String?
  previousFunding String?  // History of grants/investments

  profileComplete Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Document {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  name        String
  type        String   // pitch_deck, financials, business_plan, other
  filePath    String
  fileSize    Int
  mimeType    String

  parsed      Boolean  @default(false)
  parsedData  String?  // JSON string of extracted data

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Grant {
  id              String   @id @default(cuid())
  userId          String?
  user            User?    @relation(fields: [userId], references: [id], onDelete: SetNull)

  title           String
  funder          String
  description     String?
  amount          String?
  amountMin       Int?
  amountMax       Int?
  deadline        DateTime?
  url             String?

  type            String?  // federal, state, foundation, corporate
  category        String?  // sbir, sttr, nsf, nih, etc
  eligibility     String?
  requirements    String?

  // Location
  state           String?  // State abbreviation (e.g., CA, NY) or "ALL" for national
  city            String?
  region          String?  // e.g., "Northeast", "West Coast"

  // Contact Info
  contactName     String?
  contactEmail    String?
  contactPhone    String?
  agencyName      String?

  // Additional metadata
  tags            String?  // JSON array of tags

  matchScore      Int?     // 1-100 match percentage
  status          String   @default("discovered") // discovered, saved, interested, not_interested

  source          String?  // where we found it
  scrapedAt       DateTime?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  applications    Application[]
}

model Application {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  grantId         String
  grant           Grant    @relation(fields: [grantId], references: [id], onDelete: Cascade)

  status          String   @default("draft") // draft, in_progress, ready_for_review, submitted, pending, awarded, rejected

  // AI-generated content
  responses       String?  // JSON of form field responses
  narrative       String?
  budget          String?

  // Tracking
  submittedAt     DateTime?
  awardedAt       DateTime?
  rejectedAt      DateTime?
  awardAmount     Int?

  notes           String?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Auto-apply draft
  draft           ApplicationDraft?
}

// Stores the AI-generated draft for auto-apply feature
model ApplicationDraft {
  id              String   @id @default(cuid())
  applicationId   String   @unique
  application     Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)

  // Parsed application structure from grant requirements
  sections        String   // JSON: ApplicationSection[]

  // AI-generated responses for each section
  responses       String   // JSON: Record<sectionId, ResponseData>

  // Completion tracking
  completionScore     Int      @default(0)    // 0-100 percentage
  overallConfidence   Int      @default(0)    // 0-100 AI confidence
  missingRequirements String?  // JSON array of missing items

  // Metadata
  funderType          String?  // federal, foundation, corporate, state
  generationModel     String   @default("claude-opus")

  generatedAt     DateTime @default(now())
  lastEditedAt    DateTime @updatedAt
}

// Pre-defined templates for common funders/grant types
model ApplicationTemplate {
  id              String   @id @default(cuid())

  funderName      String   // e.g., "NSF", "NIH", "Gates Foundation"
  grantType       String   // e.g., "sbir_phase1", "r01", "general"
  funderType      String   // federal, foundation, corporate, state

  // Pre-defined section structure
  sections        String   // JSON: ApplicationSection[]

  // Writing guidance
  toneGuidance    String?  // How to write for this funder
  commonMistakes  String?  // What to avoid

  // Metadata
  isActive        Boolean  @default(true)
  usageCount      Int      @default(0)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([funderName, grantType])
}
